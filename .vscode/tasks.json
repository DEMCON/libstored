{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "bootstrap",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/bootstrap.sh"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/bootstrap.sh"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\bootstrap.cmd"
			},
			"problemMatcher": [],
			"presentation": {
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "config",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/build.sh ${input:buildtype} conf test dev"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/build.sh ${input:buildtype} conf test dev"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\build.cmd ${input:buildtype} conf test dev"
			},
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "cmake --build . --target ${input:target}",
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
				"problemMatcher": [
					"$msCompile"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "install",
			"type": "shell",
			"command": "cmake --build . --target install",
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
				"problemMatcher": [
					"$msCompile"
				]
			},
			"group": {
				"kind": "build",
			}
		},
		{
			"label": "test",
			"type": "shell",
			"dependsOn": "install",
			"command": [
				"cmake --build . --target test",
			],
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
			},
			"group": {
				"kind": "test"
			}
		}
	],
	"inputs": [
		{
			"id": "buildtype",
			"type": "pickString",
			"description": "CMAKE_BUILD_TYPE",
			"options": [
				"Debug",
				"RelWithDebInfo",
				"Release"
			],
			"default": "Debug"
		},
		{
			"id": "target",
			"type": "command",
			"command": "memento.promptString",
			"args": {
				"id": "target",
				"description": "build target",
				"default": "all"
			}
		}
	]
}